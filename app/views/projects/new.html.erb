<div class="container-fluid">
  <div class="row">
    <div class="bread-crumb">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <h3><%= link_to "Companies", companies_path %> > <%= link_to @company.company_name, company_path(@company) %> > New project</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="new-bucket">
        <%= form_for [@company, @project] do |f| %>
          <div class="form-group">
            <%= f.label :project_name, "Name" %>
            <%= f.text_field :project_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Create", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>