<div class="container-fluid">
  <div class="row">
    <div class="bread-crumb">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <h3><%= link_to "Companies", companies_path %> > <%= @company.company_name %> > Projects</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="projects">
        <ul class="list-unstyled">
          <% @company.projects.each do |project| %>
            <% if policy(project).update? %>
              <li>
                <%= link_to project.project_name, project_path(project) %>
              </li>
            <% end %>
          <% end %>
        </ul>
        <% if policy(Project).create? %>
          <%= link_to "Add a project", new_company_project_path(@company), class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>